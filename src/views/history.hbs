{{>navbar }}

<h1>Welcome {{username}}!</h1>
<h2>Your account balance is: {{amount}}$</h2>
<section class="main">
{{#compare transactions "===" "No Transactions" }}
<h2>No Transactions To List</h2>
{{/compare}}
<table>
  <tr>
    <th>Transaction ID</th>
    <th>Item ID</th>
    <th>Item</th>
    <th>Price</th>
    <th>Purchase Time</th>
  </tr>
  {{#each transactions}}
  <tr>
    <td>{{id}}</td>
    <td>{{item_id}}</td>
    <td>{{name}}</td>
    <td>{{price}}$</td>
    <td>{{t_time}}</td>
  </tr>
  {{/each}}
</table>
</section>
